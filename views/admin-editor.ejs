  grid-template-columns: 1fr 1fr;
}

.editor-panel {
  background: var(--card-bg);
  border-radius: 12px;
  padding: 2rem;
}

.frontmatter-section {
  margin-bottom: 2rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--border-color);
