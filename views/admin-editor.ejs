</style>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
const PASSWORD = '<%= password %>';
const ORIGINAL_SLUG = '<%= post ? post.slug : "" %>';

// Auto-generate slug from title
document.getElementById('title').addEventListener('input', function(e) {
  if (!ORIGINAL_SLUG || document.getElementById('slug').value === '') {
    const slug = e.target.value
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '');
    document.getElementById('slug').value = slug;
  }
});

// Live preview update
let previewTimeout;
document.getElementById('content').addEventListener('input', function() {
  clearTimeout(previewTimeout);
  previewTimeout = setTimeout(updatePreview, 500);
});

function updatePreview() {
  const content = document.getElementById('content').value;
  const previewContent = document.getElementById('previewContent');
  
  if (content.trim()) {
    previewContent.innerHTML = marked.parse(content);
  } else {
    previewContent.innerHTML = '<p class="preview-placeholder">Preview will appear here...</p>';
  }
}

function togglePreview() {
  const previewPanel = document.getElementById('previewPanel');
  const editorLayout = document.querySelector('.editor-layout');
  const toggleText = document.querySelector('.preview-toggle-text');
  
  previewPanel.classList.toggle('active');
  editorLayout.classList.toggle('split-view');
  
  if (previewPanel.classList.contains('active')) {
    toggleText.textContent = 'Hide Preview';
    updatePreview();
  } else {
    toggleText.textContent = 'Show Preview';
  }
}

function insertMarkdown(before, after) {
  const textarea = document.getElementById('content');
  const start = textarea.selectionStart;
  const end = textarea.selectionEnd;
  const text = textarea.value;
  const selectedText = text.substring(start, end);
  
  const newText = text.substring(0, start) + before + selectedText + after + text.substring(end);
  textarea.value = newText;
  
  // Set cursor position
  const newPos = start + before.length + selectedText.length;
  textarea.focus();
  textarea.setSelectionRange(newPos, newPos);
  
  updatePreview();
}

async function savePost() {
  const title = document.getElementById('title').value.trim();
  const slug = document.getElementById('slug').value.trim();
  const date = document.getElementById('date').value;
  const author = document.getElementById('author').value.trim();
  const tags = document.getElementById('tags').value.trim();
  const content = document.getElementById('content').value.trim();
  
  if (!title || !slug || !content) {
    alert('Please fill in all required fields (Title, Slug, Content)');
    return;
  }
  
  // Validate slug format
  if (!/^[a-z0-9-]+$/.test(slug)) {
    alert('Slug must contain only lowercase letters, numbers, and hyphens');
    return;
  }
  
  const postData = {
    title,
    slug,
    date,
    author,
    tags,
    content,
    originalSlug: ORIGINAL_SLUG,
    password: PASSWORD
  };
  
  try {
    const response = await fetch('/admin/posts/save', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(postData)
    });
    
    const result = await response.json();
    
    if (response.ok && result.success) {
      alert('Post saved successfully!');
      window.location.href = `/admin/posts?password=${PASSWORD}`;
    } else {
      alert('Error saving post: ' + (result.error || 'Unknown error'));
    }
  } catch (error) {
    alert('Error saving post: ' + error.message);
    console.error(error);
  }
}

// Keyboard shortcuts
document.addEventListener('keydown', function(e) {
  // Ctrl/Cmd + S to save
  if ((e.ctrlKey || e.metaKey) && e.key === 's') {
    e.preventDefault();
    savePost();
  }
  
  // Ctrl/Cmd + P to toggle preview
  if ((e.ctrlKey || e.metaKey) && e.key === 'p') {
    e.preventDefault();
    togglePreview();
  }
});

// Initial preview if editing existing post
<% if (post && post.content) { %>
  updatePreview();
<% } %>
</script>

