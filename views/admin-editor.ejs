<%- include('partials/header') %>

<!-- Main Content -->
<main class="main-content admin-editor-content">
  
  <!-- Editor Header -->
  <section class="editor-header">
    <div class="container-fluid">
      <div class="editor-header-content">
        <div class="editor-title">
          <a href="/admin/posts?password=<%= password %>" class="back-btn">
            <i class="fas fa-arrow-left"></i>
          </a>
          <h1><%= post ? 'Edit Post' : 'New Post' %></h1>
        </div>
        <div class="editor-actions">
          <button onclick="togglePreview()" class="btn btn-secondary">
            <i class="fas fa-eye"></i>
            <span class="preview-toggle-text">Show Preview</span>
          </button>
          <button onclick="savePost()" class="btn btn-primary">
            <i class="fas fa-save"></i>
            Save Post
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Editor -->
  <section class="editor-section">
    <div class="container-fluid">
      <div class="editor-layout">
        
        <!-- Editor Panel -->
        <div class="editor-panel">
          <div class="editor-form">
            
            <!-- Frontmatter Fields -->
            <div class="frontmatter-section">
              <h3>Post Information</h3>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="title">Title *</label>
                  <input 
                    type="text" 
                    id="title" 
                    placeholder="Your Post Title"
                    value="<%= post ? post.title : '' %>"
                    required
                  >
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="slug">Slug *</label>
                  <input 
                    type="text" 
                    id="slug" 
                    placeholder="post-url-slug"
                    value="<%= post ? post.slug : '' %>"
                    required
                  >
                  <small>URL-friendly version (e.g., my-awesome-post)</small>
                </div>
                
                <div class="form-group">
                  <label for="date">Date</label>
                  <input 
                    type="date" 
                    id="date"
                    value="<%= post && post.date ? new Date(post.date).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                  >
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="author">Author</label>
                  <input 
                    type="text" 
                    id="author" 
                    placeholder="Author Name"
                    value="<%= post && post.author ? post.author : 'Carlos Cervantes' %>"
                  >
                </div>
                
                <div class="form-group">
                  <label for="tags">Tags</label>
                  <input 
                    type="text" 
                    id="tags" 
                    placeholder="Mobile Testing, Automation, QA"
                    value="<%= post && post.tags ? post.tags.join(', ') : '' %>"
                  >
                  <small>Comma-separated tags</small>
                </div>
              </div>
            </div>
            
            <!-- Content Editor -->
            <div class="content-section">
              <div class="content-header">
                <h3>Content</h3>
                <div class="editor-tools">
                  <button onclick="insertMarkdown('**', '**')" title="Bold" class="tool-btn">
                    <i class="fas fa-bold"></i>
                  </button>
                  <button onclick="insertMarkdown('*', '*')" title="Italic" class="tool-btn">
                    <i class="fas fa-italic"></i>
                  </button>
                  <button onclick="insertMarkdown('`', '`')" title="Code" class="tool-btn">
                    <i class="fas fa-code"></i>
                  </button>
                  <button onclick="insertMarkdown('[', '](url)')" title="Link" class="tool-btn">
                    <i class="fas fa-link"></i>
                  </button>
                  <button onclick="insertMarkdown('\n## ', '')" title="Heading" class="tool-btn">
                    <i class="fas fa-heading"></i>
                  </button>
                  <button onclick="insertMarkdown('\n- ', '')" title="List" class="tool-btn">
                    <i class="fas fa-list"></i>
                  </button>
                  <button onclick="insertMarkdown('\n```\n', '\n```')" title="Code Block" class="tool-btn">
                    <i class="fas fa-file-code"></i>
                  </button>
                </div>
              </div>
              
              <textarea 
                id="content" 
                placeholder="Write your post content in Markdown..."
                rows="20"
              ><%= post && post.content ? post.content.trim() : '' %></textarea>
            </div>
          </div>
        </div>
        
        <!-- Preview Panel -->
        <div class="preview-panel" id="previewPanel">
          <div class="preview-header">
            <h3>Live Preview</h3>
          </div>
          <div class="preview-content" id="previewContent">
            <p class="preview-placeholder">Preview will appear here...</p>
          </div>
        </div>
        
      </div>
    </div>
  </section>

</main>

<style>
